# Google Gemini API Key (optional if using local fallback)
GOOGLE_API_KEY=your-gemini-api-key-here

# Optional: Gemini model
GOOGLE_MODEL=gemini-2.0-flash-lite

# Local Llama fallback (Ollama)
# Used when GOOGLE_API_KEY is not set or Gemini backend fails to initialize
# For Docker, prefer: OLLAMA_BASE_URL=http://host.docker.internal:11434
LOCAL_LLM_FALLBACK_ENABLED=true
LOCAL_LLM_MODEL=llama3.2:3b
OLLAMA_BASE_URL=http://127.0.0.1:11434
LOCAL_LLM_TIMEOUT_SECONDS=90
# Timeout for primary Gemini call before switching to local fallback
PRIMARY_LLM_TIMEOUT_SECONDS=20

# Application API Key (for authenticating with this app's REST API)
# If not set, a key is auto-generated and persisted to .app_api_key
APP_API_KEY=your-app-api-key-here

# Whether API key auth is required for /api/* endpoints
API_KEY_REQUIRED=true
# Let browser UI authenticate automatically via HttpOnly cookie
UI_AUTH_COOKIE_ENABLED=true
UI_AUTH_COOKIE_NAME=guardrails_ui_api_key

# MCP Server settings
MCP_ENABLED=true

# Application settings
LOG_LEVEL=INFO
DEBUG=false

# CORS settings (comma-separated origins, or "*" to allow all)
CORS_ORIGINS=*

# Server settings
HOST=0.0.0.0
PORT=8000
