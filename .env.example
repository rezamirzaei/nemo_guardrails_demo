# Google Gemini API Key (optional if using local fallback)
GOOGLE_API_KEY=your-gemini-api-key-here

# Optional: Gemini model
GOOGLE_MODEL=gemini-2.0-flash-lite

# Local Llama fallback (Ollama)
# Used when GOOGLE_API_KEY is not set or Gemini backend fails to initialize
LOCAL_LLM_FALLBACK_ENABLED=true
LOCAL_LLM_MODEL=llama3.1:8b
OLLAMA_BASE_URL=http://127.0.0.1:11434
LOCAL_LLM_TIMEOUT_SECONDS=120

# Application API Key (for authenticating with this app's REST API)
# If not set, a random key will be generated and printed to console on startup
APP_API_KEY=your-app-api-key-here

# Whether API key auth is required for /api/* endpoints
API_KEY_REQUIRED=true

# MCP Server settings
MCP_ENABLED=true

# Application settings
LOG_LEVEL=INFO
DEBUG=false

# CORS settings (comma-separated origins, or "*" to allow all)
CORS_ORIGINS=*

# Server settings
HOST=0.0.0.0
PORT=8000
